<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
    </div>
    </div>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    <form-data></form-data>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" value="<%= listing.title %>" class="form-control" required>
        <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control"required><%= listing.description %></textarea>
        <div class="invalid-feedback">
            enter a short message.
          </div>
         </div>
         <div class="mb-3">
            Original ListingImage
            <br>
            <img src="<%= originalImageUrl%>" class="img-thumbnail" style="max-width: 200px; height: auto;">
         </div>
          
        <div class="mb-3">
            <label for="image" class="form-label">Upload a New Image</label>
        <input name="listing[image][url]"  type="file"  class="form-control" >
        </div>
        <div class="row">
            <div class="mb-3 col-md-4" >
                <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="Enter price"  value="<%= listing.price %>" class="form-control"required>
        <div class="invalid-feedback">
            enter a valid price
          </div>
         </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="Enter country" type="text" value="<%= listing.country %>" class="form-control"required>
        
        <div class="invalid-feedback">
            enter a valid Country name
          </div></div>
        </div>
        <div class="mb-3 ">
            <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="Enter location" type="text" value="<%= listing.location %>" class="form-control"required>
        <div class="invalid-feedback">
            enter a valid Location
          </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</body>

